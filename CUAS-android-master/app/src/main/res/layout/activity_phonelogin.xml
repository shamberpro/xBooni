<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350sp"
        android:layout_height="250sp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logoxuas" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="#39ff14"
        android:digits="+0123456789"
        android:ems="10"
        android:fontFamily="@font/advent_pro_light"
        android:gravity="center"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:textColor="#39ff14"
        android:textColorHint="#39ff14" />

    <Button
        android:id="@+id/buttonGetVerificationCode"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPhone"
        android:gravity="center"
        android:text="GET VERIFICATION CODE"
        android:fontFamily="@font/advent_pro_light"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton" />

    <EditText
        android:id="@+id/editTextCode"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonGetVerificationCode"
        android:gravity="center"
        android:hint="Enter Code Received"
        android:inputType="number"
        android:fontFamily="@font/advent_pro_light"
        android:textColorHint="#39ff14"
        android:textColor="#39ff14"
        android:backgroundTint="#39ff14"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCode"
        android:gravity="center"
        android:text="Sign In"
        android:fontFamily="@font/advent_pro_light"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton"/>



</RelativeLayout>
